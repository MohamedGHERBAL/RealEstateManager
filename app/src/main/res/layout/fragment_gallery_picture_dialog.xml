<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.GalleryPictureDialog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/gallery_picture_dialog_take_picture_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_add_a_photo_24"
        android:text="Prendre une photo" />

    <Button
        android:id="@+id/gallery_picture_dialog_select_picture_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gallery_picture_dialog_take_picture_bt"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_baseline_photo_library_24"
        android:text="SÃ©lectionner une photo" />


    <EditText
        android:id="@+id/gallery_picture_dialog_description_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gallery_picture_dialog_select_picture_bt"
        android:layout_alignParentStart="true"
        android:hint="Ajouter une description" />

    </RelativeLayout>

</FrameLayout>